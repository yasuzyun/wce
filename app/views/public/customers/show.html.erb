<div class="container">
  <h2 class="my-5">マイページ</h2>
  <div class="row">
    <p>会員情報</p>
    <p><%= link_to "編集する",edit_customer_path, class:"btn btn-success ml-5"%></p>
    <table class="table">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>   <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %>   <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email%></td>
        </tr>        
      </tbody>
    </table>

  </div>
</div>